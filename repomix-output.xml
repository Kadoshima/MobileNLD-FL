struct NumericalStability {
    // 1. 中間計算の拡張精度
    static func safeMutliply(_ a: Q15, _ b: Q15) -> Q15 {
        let product = Int64(a) * Int64(b)  // 64bit中間計算
        let scaled = product >> 15
        return Q15(clamp(scaled, Q15_MIN, Q15_MAX))
    }
    
