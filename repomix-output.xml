// 位相空間再構成の詳細実装
func phaseSpaceReconstruction(_ timeSeries: [Q15]) -> [[Q15]] {
    var embeddings: [[Q15]] = []
    let N = timeSeries.count - (m-1) * tau
    
    for i in 0..<N {
        var vector: [Q15] = []
        for j in 0..<m {
            vector.append(timeSeries[i + j * tau])
        }
        embeddings.append(vector)
    }
    return embeddings
}
